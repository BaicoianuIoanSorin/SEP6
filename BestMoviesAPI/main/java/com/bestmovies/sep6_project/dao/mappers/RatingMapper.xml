<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bestmovies.sep6_project.dao.interfaces.IRatingReaderMapper">

    <resultMap id="RatingsResultMap" type="com.bestmovies.sep6_project.model.Rating">
        <result property="rating" column="rating" />
        <result property="votes" column="votes" />
        <association property="movie" column="movie_id" javaType="com.bestmovies.sep6_project.model.Movie" select="com.bestmovies.sep6_project.dao.interfaces.IMovieReaderMapper.getMovieById"/>
    </resultMap>

    <select id="getAll" resultMap="RatingsResultMap">
        SELECT * FROM ratings;
    </select>
</mapper>