<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bestmovies.sep6_project.dao.interfaces.IRatingMapper">

    <resultMap id="RatingsResultMap" type="com.bestmovies.sep6_project.model.Rating">
        <result property="rating" column="rating" />
        <result property="votes" column="votes" />
        <association property="movie" column="movie_id" javaType="com.bestmovies.sep6_project.model.Movie" select="com.bestmovies.sep6_project.dao.interfaces.IMovieMapper.getMovieById"/>
    </resultMap>

    <select id="getAll" resultMap="RatingsResultMap">
        SELECT * FROM ratings;
    </select>
    <insert id = "createRating" parameterType = "com.bestmovies.sep6_project.model.Rating">
        INSERT INTO ratings (rating, votes, movie_id)
        VALUES (#{rating}, #{votes}, #{movie.id});
    </insert>
    <update id="updateRating" parameterType = "com.bestmovies.sep6_project.model.Rating">
        UPDATE ratings
        SET rating = #{rating}, votes = #{votes}
        WHERE movie_id=#{movie.id};
    </update>
    <delete id = "deleteRating" parameterType = "int">
        DELETE FROM ratings WHERE movie_id = #{id}
    </delete>
</mapper>